@model IEnumerable<CarByMake>

@{
    ViewData["Title"] = "All Cars";
}

<h2>
    @ViewData["Title"]
    <a href="/cars/create" class="btn btn-primary">Add - Car</a>
</h2>

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>
            Make
        </th>
        <th>
            Model
        </th>
        <th>
            Travelled Distance
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var car in Model)
    {
        <tr>
            <th>
                @car.Make
            </th>
            <th>
                @car.Model
            </th>
            <th>
                @car.TravelledDistance KM
            </th>
        </tr>
    }
    </tbody>
</table>